<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.horarios.horariosapp.controllers.TeachersViewController"
      prefHeight="400.0"
      prefWidth="600.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox>
        <Button fx:id="backButton" text="Atras" onAction="#onBackButtonClick"/>
        <Region HBox.hgrow="ALWAYS" />
        <Label alignment="CENTER" text="AÃ±adir Profesor" />
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox>
        <VBox>
            <Label text="Nombre(s)" />
            <TextField fx:id="teacherNameTextField"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <VBox>
            <Label text="Apellido paterno" />
            <TextField fx:id="teacherFirstLastNameTextField"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <VBox>
            <Label text="Apellido materno" />
            <TextField fx:id="teacherSecondLastNameTextField"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="addButton" text="Add" onAction="#onAddTeacherButtonClick"/>
    </HBox>

    <ListView fx:id="currentTeacherListView" prefHeight="200.0" prefWidth="200.0" />

</VBox>
