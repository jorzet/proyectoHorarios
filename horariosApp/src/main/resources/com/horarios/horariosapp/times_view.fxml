<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER"
      prefHeight="400.0"
      prefWidth="600.0"
      xmlns="http://javafx.com/javafx/16"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.horarios.horariosapp.controllers.TimesViewController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox>
        <Button fx:id="backButton" text="Atras" onAction="#onBackButtonClick"/>
        <Region HBox.hgrow="ALWAYS" />
        <Label alignment="CENTER" text="AÃ±adir Horas de clase" />
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox>
        <VBox>
            <Label text="Dia" />
            <Spinner fx:id="daySpinner" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <VBox>
            <Label text="Horario" />
            <Spinner fx:id="hoursSpinner" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="addButton" text="Add" onAction="#onAddButtonClick"/>
    </HBox>

   <ListView fx:id="currentTimesListView" prefHeight="200.0" prefWidth="200.0" />

</VBox>
