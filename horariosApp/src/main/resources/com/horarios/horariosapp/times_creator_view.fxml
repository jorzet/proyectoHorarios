<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER"
      prefHeight="400.0"
      prefWidth="600.0"
      spacing="20.0"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/16" fx:controller="com.horarios.horariosapp.Controller">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Bienvenido al creador de horarios"/>

    <HBox>
        <Label fx:id="roomsText"  text="Salones"/>
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="totalRoomsText"  text="0"/>
        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#onEditRoomsButtonClick" text="Añadir/Quitar" />
    </HBox>

    <HBox >
        <Label fx:id="timesText"  text="Horarios"/>
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="totalTimesText"  text="0"/>
        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#onEditTimesButtonClick" text="Añadir/Quitar" />
    </HBox>

    <HBox >
        <Label fx:id="teachersText"  text="Profesores"/>
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="totalTeachersText"  text="0"/>
        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#onEditTeachersButtonClick" text="Añadir/Quitar" />
    </HBox>

    <HBox >
        <Label fx:id="modulesText"  text="Modulos"/>
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="totalModulesText"  text="0"/>
        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#onEditModulesButtonClick" text="Añadir/Quitar" />
    </HBox>

    <HBox >
        <Label fx:id="groupsText"  text="Grupos"/>
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="totalGoupsText"  text="0"/>
        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#onEditGroupsButtonClick" text="Añadir/Quitar" />
    </HBox>

    <Button onAction="#onCreateTimesButtonClick" text="Crear horario" />
</VBox>
