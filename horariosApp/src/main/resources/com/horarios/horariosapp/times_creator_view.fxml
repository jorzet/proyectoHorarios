<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.horarios.horariosapp.Controller">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Bienvenido al creador de horarios">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>
    <HBox>
        <Label prefWidth="70" text="Salones" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="totalRoomsText" prefWidth="50" text="0" />
        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#onEditRoomsButtonClick" style="-fx-background-color: transparent;">
            <graphic>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/plus-icon.png" />
                </image>
            </ImageView>
            </graphic>
        </Button>
    </HBox>

    <HBox>
        <Label prefWidth="70" text="Horarios" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="totalTimesText" prefWidth="50" text="0" />
        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#onEditTimesButtonClick" style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/plus-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <HBox>
        <Label prefWidth="70" text="Profesores" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="totalTeachersText" prefWidth="50" text="0" />
        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#onEditTeachersButtonClick" style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/plus-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <HBox>
        <Label prefWidth="70" text="Modulos" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="totalModulesText" prefWidth="50" text="0" />
        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#onEditModulesButtonClick" style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/plus-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <HBox>
        <Label prefWidth="70" text="Grupos" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="totalGoupsText" prefWidth="50" text="0" />
        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#onEditGroupsButtonClick" style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/plus-icon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <Button onAction="#onCreateTimesButtonClick" text="Crear horario" />
</VBox>
